version: '3.7' 

services:
  profile:
    build: .
    volumes: 
      - "./bin/profile:/opt/profile/bin/profile"
    {{- if not .Testing }} 
    {{- else }}
    environment:
      - "DB_NAME=test"
      - "DB_USER=test"
      - "DB_PASSWORD=password"
      - "DB_ADDRESS=shalprin-db"
    {{- end }}
    ports:
      - 9001:9000
    entrypoint: /opt/profile/bin/profile

  {{ if .Testing -}}
  shalprin-db:
    image: mariadb
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: 'password'
      MYSQL_DATABASE: 'test'
      MYSQL_USER: 'test'
      MYSQL_PASSWORD: 'password'
    ports:
      - 3308:3306
  {{- end }}